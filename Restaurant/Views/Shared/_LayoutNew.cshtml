@model Restaurant.ViewModels.HomeViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Basmoti - Restaurant Bootstrap 5 Template</title>
    <meta name="description" content="">
    <meta name="robots" content="noindex, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">

    <!-- all css here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-3.11.7.min.js"></script>
</head>

<body>
<header class="header-area transparent-bar header-black">
    <div class="container">
        <div class="row">
            @if (Model.SystemSetting != null)
            {
                <div class="col-lg-3 col-md-4 col-5 col-sm-4">
                    <div class="logo">
                        <a href="index.html">
                            <img class="logo-normal" alt="" src="~/photos/@Model.SystemSetting.SystemSettingLogoImageUrl2">
                            <img class="logo-sticky" alt="" src="~/photos/@Model.SystemSetting.SystemSettingLogoImageUrl2">
                        </a>
                    </div>
                </div>
            }

            @if (Model.ListMasterMenu.Count != 0)
            {
                <div class="col-lg-9 col-md-8 col-7 col-sm-8 relative">
                    <div class="menu-search-bundle">
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    @foreach (var item in Model.ListMasterMenu)
                                    {
                                        <li class="top-hover">
                                            <a href="@item.MasterMenuUrl">@item.MasterMenuName</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                        @* <div class="search-wrap">
                            <button class="search-toggle">
                                <i class="fa fa-search"></i>
                            </button>
                            <div class="search">
                                <form action="#">
                                    <input type="search" placeholder="Search here">
                                    <button type="submit">
                                        Search
                                    </button>
                                </form>
                            </div>
                        </div> *@
                    </div>
                </div>
                <div class="mobile-menu-area d-md-block d-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
                    <div class="mobile-menu">
                        <nav id="mobile-menu-active">
                            <ul class="menu-overflow">
                                @foreach (var item in Model.ListMasterMenu)
                                {
                                    <li>
                                        <a href="@item.MasterMenuUrl">@item.MasterMenuName</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <div class="search-wrap">
                        <button class="search-toggle">
                            <i class="fa fa-search"></i>
                        </button>
                        <div class="search">
                            <form action="#">
                                <input type="search" placeholder="Search here">
                                <button type="submit">
                                    Search
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</header>

    <div>
        @RenderBody()
    </div>

    <footer class="footer-area">
        <div class="footer-area-top black-bg pt-95 pb-60">
            <div class="container">
                <div class="row">
                    @if (Model.ListMasterSocialMedium.Count != 0)
                    {
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">

                                <div class="footer-title mb-30">
                                    <h4>About Us</h4>

                                </div>
                                <div class="footer-about">
                                    <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do tempor eget loved dost venenatis.</p>

                                    @if (Model.ListMasterMenu.Count != 0)
                                    {
                                        var data = Model.ListMasterMenu.SingleOrDefault(data => data.MasterMenuName.Contains("ContactUs"));
                                        if (data != null)
                                        {
                                            <div class="footer-map">
                                                <a href="@data.MasterMenuUrl"><i class="ion-ios-location-outline"></i> View map location</a>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="social-icon">
                                    <ul>
                                        @foreach (var item in Model.ListMasterSocialMedium)
                                        {
                                            <li><a class="@item.MasterSocialMediumImageUrl" href="@item.MasterSocialMediumUrl" target="_blank"><i class="@("ion-social-" + item.MasterSocialMediumImageUrl)"></i></a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model.ContactUsFooterList.Count != 0)
                    {
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">
                                <div class="footer-title mb-30">
                                    <h4>contact Us</h4>
                                </div>
                                <div class="footer-cont-info">

                                    @foreach (var item in Model.ContactUsFooterList)
                                    {
                                        <div class="single-footer-cont-info">
                                            @Html.Raw(item.MasterContactUsInformationImageUrl)
                                            @Html.Raw(item.MasterContactUsInformationIdesc)
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model.ListMasterWorkingHour.Count != 0)
                    {
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">
                                <div class="footer-title mb-30">
                                    <h4>Opening Time</h4>
                                </div>
                                <div class="open-time pr-30">
                                    <ul>
                                        @foreach (var item in Model.ListMasterWorkingHour)
                                        {
                                            <li>
                                                @item.MasterWorkingHourIdName
                                                <span>@item.MasterWorkingHourIdTimeFormTo</span>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Newsletter</h4>
                            </div>
                            <div class="newsletter-style">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do.</p>
                                <div class="subscribe-form ">
                                    <form asp-action="NewsLetter">
                                        <input asp-for="TransactionNewsletter.TransactionNewsletterEmail" placeholder="Enter your email" />
                                        <div class="clear">
                                            <input id="mc-embedded-subscribe" class="button" type="submit" name="subscribe" value="Subscribe">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.SystemSetting != null)
        {
            <div class="footer-bottom black-bg-2 pb-25 pt-25">
                <div class="container">
                    <div class="copyright text-center">
                        @Html.Raw(Model.SystemSetting.SystemSettingCopyright);
                    </div>
                </div>
            </div>
        }
    </footer>

    <!-- all js here -->
    <script src="~/assets/js/vendor/jquery-v1.12.4.min.js"></script>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/ajax-mail.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>
</html>
