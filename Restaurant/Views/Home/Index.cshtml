                    @Html.Raw(Model.MasterOffer.MasterOfferDesc)
                    <div class="default-btn-style book-btn mt-35">
                        <a class="scroll-up" href="#book">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
