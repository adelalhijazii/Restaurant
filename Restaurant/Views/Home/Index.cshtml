                        </div>
                    }
                </div>
                <div class="testimonial-text-slider text-center">
                    @foreach(var item in Model.ListWhatPeopleSay)
                    {
                        <div class="single-testi-img">
                            <img src="~/photos/@item.WhatPeopleSayImageUrl" alt="testi 1" />
                            <h3>@item.WhatPeopleSayTitle</h3>
                            <h5>customer</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="offer-area gray-bg ptb-100 bg-img" style="background-image:url(/photos/@Model.MasterOffer.MasterOfferImageUrl);">
    <div class="container">
        <div class="row">
            <div class="xl-auto col-xl-5 ms-auto col-lg-6 col-md-12">
