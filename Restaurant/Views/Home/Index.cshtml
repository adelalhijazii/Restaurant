@model Restaurant.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="slider-area">
    <div class="slider-active owl-dot-style owl-carousel">
        @foreach(var item in Model.ListMasterSlider)
        {
            <div class="single-slider bg-img height-100vh d-flex align-items-center justify-content-center" style="background-image:url(/photos/@item.MasterSliderUrl);">
                <div class="slider-content pt-100">
                    <div class="slider-content-wrap slider-animated-1">
                        @Html.Raw(item.MasterSliderTitle)
                        @Html.Raw(item.MasterSliderBreef)
                        <p>@Html.Raw(item.MasterSliderDesc)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="about-area ptb-95">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-lg-6">
                <div class="about-content pr-30">
                    <h2> @Html.Raw(Model.SystemSetting.SystemSettingWelcomeNoteTitle) @*About Basmoti Restaurant*@ </h2>
                    

                    <h3> @Model.SystemSetting.SystemSettingWelcomeNoteBreef @*Basmoti ensures healthy environment. Make a short trip.*@ </h3>
                    
                    <div class="about-peragraph">
                        @*<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet dolor libero, eget loved dost venenatis mauris finibus dictum. Vestibulum quis elit eget neque porttitor no amet dolor Proin pretium.</p>*@
                        <p>@Html.Raw(Model.SystemSetting.SystemSettingWelcomeNoteDesc)</p>
                        
                        <div class="default-btn-style mt-35">
                            @*<a href="#">read more</a>*@
                            @Html.Raw(Model.SystemSetting.SystemSettingWelcomeNoteUrl)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-img">
                    <img alt="" src="~/photos/@Model.SystemSetting.SystemSettingWelcomeNoteImageUrl">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="popular-product gray-bg pt-100 pb-100">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>Our Popular Dishes</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="product-slider-active owl-carousel">


            @foreach (var item in Model.ListMasterItemMenu.OrderByDescending(x => x.MasterCategoryMenuId).Take(5))
            {
                <div class="product-style-wrap">
                    <img alt="" src="~/photos/@item.MasterItemMenuImageUrl">
                    <div class="product-content text-center">
                        <h4>
                            @item.MasterItemMenuTitle
                        </h4>
                        <p>@item.MasterItemMenuBreef</p>
                        <span>$@item.MasterItemMenuPrice</span>
                    </div>
                </div>
            }


        </div>
    </div>
    <div class="popular-bg-img">
        <img alt="" src="~/assets/img/banner/popular.png">
    </div>
</div>


<div class="book-table ptb-100 bg-img" id="book" style="background-image:url(/assets/img/banner/book-a-table.jpg);">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>book a table</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="reserve-form">
                    <h3 class="reserv-title">Reservation Form</h3>
                    <form asp-action="BookTable">
                        <div class="reserve-form-top">
                            <input asp-for="TransactionBookTable.TransactionBookTableFullName" placeholder="Full name">
                            <span asp-validation-for="TransactionBookTable.TransactionBookTableFullName" class="text-danger"></span>
                            <input asp-for="TransactionBookTable.TransactionBookTableEmail" placeholder="Email address">
                            <span asp-validation-for="TransactionBookTable.TransactionBookTableEmail" class="text-danger"></span>
                            <input asp-for="TransactionBookTable.TransactionBookTableMobileNumber" placeholder="Mobile number">
                            <span asp-validation-for="TransactionBookTable.TransactionBookTableMobileNumber" class="text-danger"></span>
                            <input class="date-time" asp-for="TransactionBookTable.TransactionBookTableDate">
                            <span asp-validation-for="TransactionBookTable.TransactionBookTableDate" class="text-danger"></span>
                        </div>
                        <div class="reserve-submit mt-40">
                            <button type="submit"> submit </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="book-img">
                    <img src="~/assets/img/banner/table.png" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="testimonial-area ptb-100 gray-bg">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>what people say</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="row">
