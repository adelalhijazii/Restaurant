@model Restaurant.Areas.Admin.ViewModels.MasterMenuViewmodel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h2>MasterMenu</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterMenu">MasterMenu</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="MasterMenuId" class="form-control" type="hidden" value="0" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterMenuName" class="form-label"></label>
                <input asp-for="MasterMenuName" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="MasterMenuName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterMenuUrl" class="form-label"></label>
                <input asp-for="MasterMenuUrl" class="form-control" placeholder="Enter URL" />
                <span asp-validation-for="MasterMenuUrl" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

<div class="row d-none">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="MasterMenuId" class="form-control" type="hidden" value="0" />
            <div class="form-group">
                <label asp-for="MasterMenuName" class="form-label"></label>
                <input asp-for="MasterMenuName" class="form-control" />
                <span asp-validation-for="MasterMenuName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterMenuUrl" class="form-label"></label>
                <input asp-for="MasterMenuUrl" class="form-control" />
                <span asp-validation-for="MasterMenuUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-end d-none">
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

