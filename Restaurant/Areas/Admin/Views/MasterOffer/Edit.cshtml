@model Restaurant.Areas.Admin.ViewModels.MasterOfferViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h2>MasterOffer</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterOffer">MasterOffer</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MasterOfferId" />
    <input type="hidden" asp-for="CreateUser" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferTitle" class="form-label"></label>
                <input asp-for="MasterOfferTitle" class="form-control" />
                <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferBreef" class="form-label"></label>
                <input asp-for="MasterOfferBreef" class="form-control" />
                <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferDesc" class="form-label"></label>
                @* <input asp-for="MasterOfferDesc" class="form-control" /> *@
                <textarea asp-for="MasterOfferDesc" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferFile" class="form-label"></label>
                <input asp-for="MasterOfferFile" class="form-control" />
                <span asp-validation-for="MasterOfferFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterOfferImageUrl" class="form-control" />
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
