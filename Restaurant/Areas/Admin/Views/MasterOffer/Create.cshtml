@model Restaurant.Areas.Admin.ViewModels.MasterOfferViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h2>MasterOffer</h2>
    <br />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterOffer">MasterOffer</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="MasterOfferId" class="form-control" type="hidden" value="0" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferTitle" class="form-label"></label>
                <input asp-for="MasterOfferTitle" class="form-control" placeholder="Enter Title" />
                <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferBreef" class="form-label"></label>
                <input asp-for="MasterOfferBreef" class="form-control" placeholder="Enter Breef" />
                <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferDesc" class="form-label"></label>
                @* <input asp-for="MasterOfferDesc" class="form-control" placeholder="Enter Description" /> *@
                <textarea asp-for="MasterOfferDesc" class="form-control" rows="4" placeholder="Enter Description"></textarea>
                <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterOfferFile" class="form-label"></label>
                <input asp-for="MasterOfferFile" type="file" class="form-control" />
                <span asp-validation-for="MasterOfferFile" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
    <div class="text-end">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

